@using EmployeeManagement.Web.Areas.Employee.Models

@section Styles
{
    <style>
        body {
            background-color: white;
        }

        section.content {
            padding-top: 20px;
            margin-top: -30px;
        }

        .form-control-underline {
            border: none;
            border-bottom: 1px solid #000;
            border-radius: 0;
            outline: none;
            padding: 10px 0;
            width: 100%;
            background-color: transparent;
            transition: border-color 0.3s ease;
        }

            .form-control-underline:focus {
                border-bottom: 2px solid #007bff;
            }

        .barcode-input-group {
            display: flex;
            align-items: center;
            position: relative;
        }

            .barcode-input-group input {
                flex-grow: 1;
                padding-right: 50px;
            }

        .barcode-image {
            width: 30px;
            height: auto;
            margin-left: -30px;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }

        h2.text-center {
            margin-top: 0;
            margin-bottom: 0;
            display: inline-block;
            padding-right: 10px;
        }

        hr.border-top {
            border-top: 1px solid black;
            width: 100%;
        }

    </style>
}


@model EmployeeUpdateModel
<section class="content py-3" style="background-color: #ffffff;">


    <partial name="_ToasterNotification" />
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Id" />
                <h2 class="text-center mb-2">Update Employee</h2>
                <hr class="border-top border-dark mb-4">

                <form asp-area="Employee" asp-controller="Employee" asp-action="Update" asp-antiforgery="true" method="post" enctype="multipart/form-data">

                    <div class="row">
                        <div class="col-md-6">
                           

                            <div class="d-flex align-items-center">
                                <label asp-for="Name" class="mr-2 mb-0">User Name</label>
                                <input type="text" asp-for="Name" readonly>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>


                    </div>
                    <div class="row">
                        <div class="col-md-6">

                            <div class="d-flex align-items-center">
                                <label asp-for="Email" class="mr-2 mb-0">Email</label>
                                <input type="email" asp-for="Email" readonly>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>


                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <select asp-for="Department" class="form-control" asp-items="ViewBag.Department">
                                <option value="">Select Department</option>
                            </select>
                            <span asp-validation-for="Department" class="text-danger"></span>


                        </div>

                    </div>


                    <div class="row">
                        <div class="col-md-6">

                            <div class="d-flex align-items-center">
                                <label asp-for="JoiningDate" class="mr-2 mb-0">Joining date</label>
                                <input type="date" asp-for="JoiningDate">
                                <span asp-validation-for="JoiningDate" class="text-danger"></span>
                            </div>
                        </div>


                    </div>


                   

                    <div class="row">
                        <div class="col-md-6">

                            <div class="d-flex align-items-center">
                                <label asp-for="Status" class="mr-2 mb-0">Is Employee Active?</label>
                                <input type="checkbox" asp-for="Status">
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>


                    </div>


                    <div class="row mt-4">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-sm mr-2 px-3" id="saveButton">Save</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>



@section Scripts
{







    <partial name="_ValidationScriptsPartial" />









}







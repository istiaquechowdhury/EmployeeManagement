@using EmployeeManagement.Web.Areas.Employee.Models
@model LeaveCreateModel

<h2>Request Leave</h2>

<form  asp-controller="Leave" asp-action="RequestLeave" method="post" asp-antiforgery="true">
    <div class="form-group">
        <label>Leave Type</label>
        <input asp-for="LeaveType" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Reason</label>
        <textarea asp-for="Reason" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label>Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" required />
    </div>
   

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
